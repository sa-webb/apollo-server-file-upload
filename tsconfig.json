{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots" : ["./node_modules/@types", "./src/server/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "src/server/*.ts",
    "src/server/**/*.ts",
    "src/server/server/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "src/server/**/*.spec.ts",
    "src/server/**/*.spec.js"
  ]
}